<% if @todo.errors.present? %>

  <ul>
    <% @todo.errors.each do |error, message| %>
    <li> <%= "#{error.capitalize}  #{message}" %> </li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="page-header">
    <h1>To Do list   <small>   <%= Time.new %></small></h1>
  </div>

  <div class="form container">
    <%= form_for @todo do |f| %>
      <div class="form-gruop">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name ,class: "form-control" %>
      </div>
      <div class="form-gruop">
        <%= f.label :due_date, "due_date" %>
        <%= f.date_field :due_date ,class: "form-control" %>
      </div>
      <div class="form-gruop">
        <%= f.label :note, "Note" %>
        <%= f.text_area :note ,class: "form-control" %>
      </div>
      <div class="btn-toolbar" role="toolbar">
      <%= f.submit class: "btn btn-danger active " %>
      <%= link_to '<span class = "glyphicon glyphicon-home"></span>'  .html_safe, todos_path, class: "btn btn-primary active " %>
    </div>
    <% end %>
  </div>
</div>
