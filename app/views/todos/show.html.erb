<div class="container">
  <div class="page-header">
    <h1>To Do list   <small>   <%= Time.new %></small></h1>
  </div>
    <table class="table table-striped table-condensed table-hover ">
      <thead>
        <tr>
          <th>名稱</th>
          <th>期限</th>
          <th>note</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @todo.name %></td>
          <td><%= @todo.due_date %></td>
          <td><%= simple_format(@todo.note) %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to '<span class = "glyphicon glyphicon-home"></span>'  .html_safe, todos_path, class: "btn btn-primary active " %>
</div>
